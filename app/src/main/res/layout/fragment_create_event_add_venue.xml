<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.c4q.capstone.userinterface.events.createevent.CreateEventActivity">
    <TextView
        android:id="@+id/txtMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_gravity="start"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_gravity="start"
        android:text="Choose a venue"/>
    <Button
        android:id="@+id/bar_choice_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bar"
        android:layout_margin="@dimen/layout_item_margin"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:background="@drawable/eventbutton"
        android:tag="bar"
        android:onClick="venueTypeButtonClick"
        />

    <Button
        android:id="@+id/restaurant_choice_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_item_margin"
        android:text="Restaurant"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:background="@drawable/eventbutton"
        android:tag="restaurant"
        android:onClick="venueTypeButtonClick"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/layout_padding"
        android:layout_gravity="end"
        android:onClick="nextPage"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:visibility="gone"/>


</LinearLayout>
